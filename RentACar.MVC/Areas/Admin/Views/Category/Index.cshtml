
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetAllCategoryDto>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Panel category list</h4>

                <table id="complex-header-datatable" class="table dt-responsive nowrap">
                    <thead class="thead-light">

                        <tr>
                            <th>Category Name</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>

                                <td>@category.Name</td>
                                <td>@DateTime.Parse(category.CreatedDate.ToString()).ToLongDateString()</td>
                                <td>@DateTime.Parse(category.UpdateDate.ToString()).ToLongDateString()</td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary btn-sm mr-2">Edit</a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                                        @* <a asp-area="Admin" asp-controller="Category" asp-action="Read" asp-route-id="@category.Id" class="btn btn-dark btn-sm ">Details</a> *@
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Category Name</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

