
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetAllPricingToCarDto>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Panel price to car list</h4>

                <table id="complex-header-datatable" class="table dt-responsive nowrap">
                    <thead class="thead-light">

                        <tr>
                            <th>Brand Name</th>
                            <th>Model</th>
                            <th>Cover Image</th>
                            <th>Pricing list</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BrandName</td>
                                <td>@item.Model</td>
                                <td>
                                    <div style="width:150px; height:100px;">
                                        <img src="@item.CoverImageUrl" class="img-fluid" />
                                    </div>
                                </td>

                                <td>
                                    @item.PriceName - @item.Amount AZN
                                </td>

                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a asp-area="Admin" asp-controller="PricingToCar" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary btn-sm mr-2">Edit</a>
                                        <a asp-area="Admin" asp-controller="PricingToCar" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                                        @* <a asp-area="Admin" asp-controller="PricingToCar" asp-action="Read" asp-route-id="@item.Id" class="btn btn-dark btn-sm ">Details</a> *@
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Brand Name</th>
                            <th>Model</th>
                            <th>Cover Image</th>
                            <th>Pricing list</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>


