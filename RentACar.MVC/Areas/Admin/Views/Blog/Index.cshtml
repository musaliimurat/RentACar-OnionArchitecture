
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetAllBlogDto>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Panel blog list</h4>

                <table id="complex-header-datatable" class="table dt-responsive nowrap">
                    <thead class="thead-light">
                        @*   <tr>
                            <th colspan="3">Contact</th> 
                            <th rowspan="2" class="align-middle">Name</th>
                            <th colspan="2">Actions</th>
                        </tr> *@
                        <tr>
                            <th>Image</th>
                            <th>Blog Title</th>
                            <th>Category name</th>
                            <th>Content</th>
                            <th>IsNew</th>
                            <th>FullName</th>
                            <th>AuthorBlogCount</th>
                            <th>Author image</th>
                            <th>Actions</th>
                            <th>Seat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>
                                    <div style="width:150px;">
                                        <img src="@blog.ImageUrl" class="img-fluid" />
                                    </div>
                                </td>
                                <td>@blog.Title</td>
                                <td>@blog.CategoryName</td>
                                <td>@(blog.Content.Length>30 ? blog.Content.Substring(0,50) + "..." : blog.Content)</td>
                                <td>@(blog.IsNew ? "Bəli" : "Xeyr")</td>
                                <td>@blog.FullName</td>
                                <td>@blog.AuthorBlogCount</td>
                                <td>
                                    <div style="width:150px">
                                        <img src="@blog.AuthorImageUrl" class="img-fluid" />
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@blog.Id" class="btn btn-secondary btn-sm mr-2">Edit</a>
                                        <a asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                                        <a asp-area="" asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id" target="_blank" class="btn btn-dark btn-sm ">Visit this website</a>
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Image</th>
                            <th>Blog Title</th>
                            <th>Category name</th>
                            <th>Content</th>
                            <th>IsNew</th>
                            <th>FullName</th>
                            <th>AuthorBlogCount</th>
                            <th>Author image</th>
                            <th>Actions</th>
                            <th>Seat</th>
                        </tr>
                    </tfoot>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

