
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model UpdateCarDescriptionVM

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Update car description</h4>

        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UpdateCarDescriptionDto.Id" />
            <div class="form-group">
                <label for="carId">Select car</label>
                <select class="form-control" id="carId" asp-for="UpdateCarDescriptionDto.CarId" asp-items="@(new SelectList(Model.GetAllCarsWithBrandNameForAdminDtos, "Id", "DisplayName"))">
                    <option hidden>Select car</option>
                </select>
                <span asp-validation-for="UpdateCarDescriptionDto.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="details">Details</label>
                <input type="text" class="form-control" id="details" asp-for="UpdateCarDescriptionDto.Details" placeholder="Enter details">
                <span asp-validation-for="UpdateCarDescriptionDto.Details" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-secondary waves-effect waves-light">Update</button>
        </form>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</div>

