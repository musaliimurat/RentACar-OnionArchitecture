
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<GetAllBannerDto>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Panel banner list</h4>

                <table id="complex-header-datatable" class="table dt-responsive nowrap">
                    <thead class="thead-light">

                        <tr>
                            <th>Title</th>
                            <th>Video Description</th>
                            <th>Video Url</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Title</td>
                                <td>@item.VideoDescription</td>
                               <td>
                                    <a target="_blank" href="@item.VideoUrl">
                                        <span> <i class="fas fa-play-circle"></i> play video</span>
                                    </a>
                               </td>
                                <td>@DateTime.Parse(item.CreatedDate.ToString()).ToLongDateString()</td>
                                <td>@DateTime.Parse(item.UpdateDate.ToString()).ToLongDateString()</td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a asp-area="Admin" asp-controller="Banner" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary btn-sm mr-2">Edit</a>
                                        <a asp-area="Admin" asp-controller="Banner" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                                        @* <a asp-area="Admin" asp-controller="Banner" asp-action="Read" asp-route-id="@item.Id" class="btn btn-dark btn-sm ">Details</a> *@
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Title</th>
                            <th>Video Description</th>
                            <th>Video Url</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Actions</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

