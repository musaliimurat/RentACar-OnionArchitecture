<section class="ftco-section ftco-no-pt">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 heading-section text-center ftco-animate mb-5">
				<span class="subheading">Choose Car</span>
				<h2 class="mb-2">Featured Cars</h2>
			</div>
		</div>
		<div class="row">
			
				@foreach (var car in Model.GetAllCarsSliderDtos.Take(3).OrderByDescending(c=>c.CreatedDate))
				{
					<div class="col-md-4">
						<div class="car-wrap rounded ftco-animate">
							<div class="img rounded d-flex align-items-end" style="background-image: url(@car.CoverImageUrl);">
							</div>
							<div class="text">
								<h2 class="mb-0"><a asp-controller="Car" asp-action="Detail" asp-route-id="@car.Id">@car.BrandName</a></h2>
								<div class="d-flex mb-3">
									<span class="cat">@car.Model</span>
									@if (car.Pricings != null && car.Pricings.Any())
									{
										<p class="price ml-auto">@car.Pricings.First().Amount AZN <span>/@car.Pricings.First().PricingName</span></p>
									}
									else
									{
										<p class="price ml-auto">* AZN <span>/*</span></p>
									}
								</div>
								<p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Book now</a> <a asp-controller="Car" asp-action="Detail" asp-route-id="@car.Id" class="btn btn-secondary py-2 ml-1">Details</a></p>
							</div>
						</div>
					</div>
				}
		</div>
	</div>
</section>

